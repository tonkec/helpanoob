<% if @comment.errors.any? %>
	$("#editcomment-<%= @comment.id %>").modal("show");
	$("#editcomment-<%= @comment.id %> .modal-content").append("<h1>Errors: </h1> <%= @comment.errors.full_messages %>");
<% else %>
	$("#editcomment-<%=@comment.id%>").modal("hide");
	$(".comments-col#<%= @comment.id %>").fadeOut(500, function(){
		$(this).remove();
		$("#comment-wrapper").prepend("<%= j render @comment %>");
	});
<% end %>
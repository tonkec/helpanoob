<h1>Unanswered</h1>
<div id="tag_cloud">
Select by tags:  <% tag_cloud Post.uncommented.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, unanswered_tag_path(tag.name), class: css_class %>
  <% end %>
</div>
<div class="posts-orders">
    <span class="icon-elegant-font-177-8826 sort-icon"></span>
    <%= link_to "All", posts_path %>
    <%= sort_link(@q, :created_at, "Created", hide_indicator: true) %>
    <%= sort_link(@q, :cached_votes_score, "Hearts", hide_indicator: true) %>
</div><!-- post-orders -->

<%= render "index_post" %>
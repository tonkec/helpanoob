<%= link_to like_post_comment_path(@post, @comment), :remote => true, class: "like", id: "like", method: :put do %>
<i class="fa fa-heart main-question-icon" id="heart">
</i>
<% end %>

<%= link_to dislike_post_comment_path(@post, @comment), :remote => true, class: "like hidden", id: "dislike", method: :put do %>
<i class="fa fa-heart main-question-icon" id="heart">
</i>
<% end %>


<span class="number-of-votes">
 <%= @post.cached_weighted_score %><br />
</span>

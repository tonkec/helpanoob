<% if @post.errors.any? %>
	$("#editpost-<%= @post.id %>").modal("show");
	$("#editpost-<%= @post.id %> .modal-content").append("<%= j render 'shared/error_messages', object: @post %>");
<% else %>
	$("#editpost-<%=@post.id%>").modal("hide");
	$("#post-content-<%= @post.id %>").fadeOut(500, function(){
		$(this).remove();
		$("#post-wrapper").prepend("<%= j render @post %>");
	});
<% end %>
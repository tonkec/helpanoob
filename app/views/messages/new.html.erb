<%= form_tag messages_path, method: :post, class: "message-form" do %>
    <%= label_tag 'recipients', 'Send message to:' %>
    <%= select_tag 'recipients', recipients_options, multiple: true, class: 'form-control' %>

    <%= label_tag 'message[subject]', 'Subject:' %>
    <%= text_field_tag 'message[subject]', nil, class: 'form-control', required: true %>

    <%= label_tag 'message[body]', 'Message:' %>
    <%= text_area_tag 'message[body]', nil, cols: 3, class: 'form-control input-full large-textarea', required: true %>

   

  <%= submit_tag 'Send message', class: 'btn btn-orange pull-right' %>
<% end %>
<h1>Users#show</h1>
<h4><%= @user.username %></h4>
<h4><%= @user.email %></h4>
<h4><%=image_tag(@user.avatar)%></h4>
<p>Posts:<%= @user.posts.count %></p>
<p>Comments:<%= @user.comments.count %></p>

<h1>Posts</h1>
<% if @user_posts.any? %>
<%= @user_posts.count %>
<%= render(partial: 'user_post', collection: @user_posts, object: @post) %>
<% else %>
<p>This user has no posts</p>
<% end %>

<h1>Comments</h1>
<%= @user_comments %>
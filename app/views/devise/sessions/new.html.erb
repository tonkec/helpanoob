<div class="bg-wrap">
  <div class="bg-image-container">
    <div class="bg-image">
      <div class="layer"></div>
    </div>
    <div class="bg-image">
      <div class="layer"></div>
    </div>
    <div class="bg-image">
      <div class="layer"></div>
    </div>
    <div class="bg-image">
      <div class="layer"></div>
    </div>
  </div><!--bg-img-con-->

  <div class="bg-wrapper">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <h1 class="signup-heading">Get in!</h1> 
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        </div>

        <div class="actions">
          <%= f.submit "Log In" %>
        </div>
        <% end %>
        <%= link_to "Sign Up", new_user_registration_path, class: "bottom-text" %>
      </div><!-- col -->
    </div><!-- row -->
  </div><!-- signup-wrapper -->
</div><!--bg-wrap-->
<script>
 $(document).ready(function(){


   $("body").css("background-color", "transparent");

   var imgs = $(".bg-img");
   i = -1;
   (function f(){
    i = (i + 1) % imgs.length;

    $(imgs).not(imgs[i]).removeClass("slide-active")
    $(imgs[ i ]).addClass("slide-active")
    setTimeout(f, 7000);
  })();


  $("body, html").scroll(function(){
    var offset = $("#nav-offset").offset().top;
    if (offset < 100) {
      $("#nav").addClass("white-nav");
    } else {
      $("#nav").removeClass("white-nav");
    }

  });




 });

  

</script>
<div class="main-col comments-col" id="<%= comment.id %>">
  <div class="col-xs-12 col-sm-10 p-l-0 p-r-0">
    <p class="comment-content">
      <% if comment.user_id == current_user.id %>
        <%= link_to "Edit", edit_post_comment_path(@post, comment), remote: true, 'data-target' => "#editcomment-#{comment.id}", 'data-toggle' => "modal" %>
        <%= comment.content %>
        <i class="fa fa-pencil"></i>
      <% else %>
        <%= comment.content %> 
      <% end %>
    </p>
  </div>   
  
  <h3><%= comment.id %></h3>
  <h3>Post <%= comment.post.id %></h3>
  <div class="col-xs-12 col-sm-2">
    
    <% if current_user.voted_up_on? comment %>
      <%= link_to dislike_post_comment_path(@post, comment), :remote => true, class: "like", id: "comment_dislike-#{comment.id}", method: :put do %>
      <i class="fa fa-heart main-question-icon" id="heart">
      </i>
      <% end %>

      <%= link_to like_post_comment_path(@post, comment), :remote => true, class: "like hidden", id: "comment_like-#{comment.id}", method: :put do %>
      <i class="fa fa-heart main-question-icon" id="heart">
      </i>
      <% end %>

    <% else %>

      <%= link_to dislike_post_comment_path(@post, comment), :remote => true, class: "like hidden", id: "comment_dislike-#{comment.id}", method: :put do %>
      <i class="fa fa-heart main-question-icon" id="heart">
      </i>
      <% end %>

      <%= link_to like_post_comment_path(@post, comment), :remote => true, class: "like", id: "comment_like-#{comment.id}", method: :put do %>
      <i class="fa fa-heart main-question-icon" id="heart">
      </i>
      <% end %>

    <% end %>

    <span class="number-of-votes" id="comment_number_of_votes-<%=comment.id%>">
      <%= comment.cached_weighted_score %><br />
    </span>



  </div><!-- col -->

  <div class="col-xs-12 col-sm-12 p-l-0 p-r-0">
    <span class="comment-email green-text">
      <%= link_to comment.user.email, user_path(comment.user), class: "green-text" %>
    </span>
    <span class="comment-date">
      <%= comment.created_at.to_formatted_s(:short) %>
    </span>

    <% if comment.user_id == current_user.id %>
      <a href="" class: "delete_comment" data-target="#deletecomment-<%= comment.id %>" data-toggle="modal">Destroy</a>
    <% end %>
  </div> <!-- col -->

<!-- Modal -->
<div class="modal fade" id="editcomment-<%=comment.id%>" tabindex="-1" role="dialog" aria-labelledby="editComment">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="editComment">
         edit comment
        </h4>
      </div><!-- header -->
      <div class="modal-body">
        <h1> <%= truncate(comment.content, length: 300) %></h1>

        <%= form_for([@post, comment], :method => :put, remote: true) do |f| %>
          <%= f.text_area :content %>
          <%= f.submit "Update", class: "btn btn-primary" %>
           <% end %>
      </div><!-- body -->
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div><!-- footer -->
     
    </div><!-- content -->
  </div><!-- dialog -->
</div><!-- modal -->


  <!--Delete post Modal -->
    <div class="modal fade edit-post-modal" id="deletecomment-<%=comment.id%>" tabindex="-1" role="dialog" aria-labelledby="deleteComment">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          
          <div class="modal-body">  
              <h1>Are you sure you want to delete this comment?</h1>
              <p>
                <%= comment.content %>
              </p>

          </div><!-- modal body -->
        
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
           <%= link_to 'Delete Comment', [comment.post, comment], method: :delete, remote: true, class: "green-text delete-comment", 'data-dismiss' => 'modal' %>
        </div><!-- modal footer -->
      </div>  <!-- modal content -->
    </div> <!-- modal dialog -->
    </div> <!-- modal-fade -->

</div><!-- main-col -->
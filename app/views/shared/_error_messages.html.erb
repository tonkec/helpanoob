<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(object.errors.count, "error") %>.
    </div>
    <ul>
    
      <% object.errors.messages.values.each do |msg| %>
        <% msg.each do |m| %>
          <li><%= m %></li>
        <% end %>
      <% end %>

    </ul>
  </div>
<% end %>
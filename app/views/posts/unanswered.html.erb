<h1>Unanswered questions</h1>
<div class="posts-orders">
    <span class="icon-elegant-font-177-8826 sort-icon"></span>
    <%= link_to "All", posts_path %>
    <%= sort_link(@q, :created_at, "Created", hide_indicator: true) %>
    <%= sort_link(@q, :cached_votes_score, "Hearts", hide_indicator: true) %>
</div><!-- post-orders -->

<div id="tag_cloud">
<% tag_cloud Post.uncommented.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, unanswered_tag_path(tag.name), class: "tag" %>
  <% end %>
</div>

<div id="content">
  <%= render "index_post" %>
</div>

<div class="col-xs-12 col-sm-12 .col-xl-offset-2 col-xl-8">

<% unless @posts.current_page == @posts.total_pages %>
   <p id="view-more" class="clearfix">
    <%= link_to('View More', url_for(page: @posts.current_page + 1), class: "btn-orange-bordered btn-full btn-load") %>
  </p>
<% end %>
</div>

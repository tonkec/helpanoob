<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   <%= f.text_field :title, class: "green-input form-control", placeholder: "Title" %>
   <%= f.text_area :description, class: "green-textarea form-control", placeholder: "Ask a question" %>
    <%= f.select(:group_id, Group.all.collect {|g| [g.title, g.id]}, :prompt => 'Select') %>
  </div>
  <div class="field">
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit "Ask", class: "btn-full btn-green" %>
  </div>
<% end %>

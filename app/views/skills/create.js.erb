<% if @skill.errors.any? %>
	$("#new_skill").modal("show");
	$("#error_explanation").remove();
	$("#new_skill .modal-content").append("<%= j render 'shared/error_messages', object: @skill %>");
<% else %>
	$("#new_skill").modal("hide");
	$(".add-more-col").fadeOut(500, function(){
	  $("#skills-col").prepend("<%= j render @skill %>");	
	});
	$(".add-more-col").fadeIn(500);
	
<% end %>
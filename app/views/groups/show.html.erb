<p id="notice"><%= notice %></p>


  <h1>Welcome to group <%= @group.title %></h1>
  <p>List of posts:</p>
  <ul>
    <% @group.posts.each do |post| %>
      <li><%=link_to post.description, post_path(post) %></li>
      <ul>
        <p>List of comments</p>
        <% post.comments.each do |c| %>
          <li><%= link_to c.content, post_comments_path(post)%></li>
        <%end %>
      </ul>
    <% end %>    
  </ul>  


<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
